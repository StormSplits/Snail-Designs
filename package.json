{
  "name": "snaildesigns",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:cross-browser": "playwright test cross-browser.spec.js",
    "test:performance": "playwright test performance.spec.js",
    "test:visual": "playwright test visual.spec.js --update-snapshots",
    "test:visual:check": "playwright test visual.spec.js",
    "test:mobile": "playwright test mobile.spec.js",
    "test:stability": "playwright test stability.spec.js",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:report": "playwright show-report test-results/html-report",
    "test:generate-report": "node e2e/utils/generateReport.js",
    "test:generate-compatibility-report": "node e2e/utils/generateCompatibilityReport.js",
    "test:ci": "playwright test --reporter=list,html,json",
    "lighthouse": "lighthouse http://localhost:4173 --output=html --output-path=./test-results/lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "pretest": "npm run build",
    "posttest": "npm run test:generate-report"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@vercel/analytics": "^1.6.1",
    "framer-motion": "^12.23.22",
    "gsap": "^3.13.0",
    "lucide-react": "^0.544.0",
    "ogl": "^1.0.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-router": "^7.9.3",
    "react-router-dom": "^7.9.3",
    "tailwindcss": "^4.1.13",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "lighthouse": "^13.0.1",
    "playwright": "^1.58.1",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.0",
    "vite": "^7.1.7",
    "vite-plugin-compression": "^0.5.1",
    "wait-on": "^9.0.3"
  }
}
